while [[ $# > 0 ]] ; do
    case "$1" in
        -d | --deploy )
            shift
            declare deploy=true
        ;;

        * )
            shift
        ;;
    esac
done

echo $environment
exit


if [ -z "$deploy" ]; then
	#clone
    echo "mount"
    exit
	git clone @repository_url
	cd @repository_dir
fi


source $environment/build

# database first-import
cat mysql.sql | docker exec -i @db_container_name /usr/bin/mysql -u wordpress --password=wordpress wordpress
docker-compose down

# unsets
unset deploy
