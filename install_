# clone
git clone @repository_url
cd @repository_dir

# hooks
cp .git-hooks/* .git/hooks
chmod +x .git/hooks/pre-commit
chmod +x .git/hooks/post-merge

# services
docker-compose up -d
cat mysql.sql | docker exec -i @db_container_name /usr/bin/mysql -u wordpress --password=wordpress wordpress
docker-compose down
